{
	"type": "bigglobe:scripted",
	"category": "misc",
	"width": 1,
	"height": 1,
	"matches": [
		"boolean*(haveBall = false, haveString = false)",
		"for (ItemStack stack in input:",
			"if (stack.empty: continue())",
			"else if (stack.item.isIn('c:string'): haveString = true)",
			"else if (stack.item ==. 'bigglobe:ball_of_string':",
				"if (haveBall =: true: return(false))",
			")",
			"else (return(false))",
		")",
		"return(haveBall & haveString)"
	],
	"output": [
		"ItemStack ball = ItemStack.EMPTY",
		"int string = 0",
		"for (ItemStack stack in input:",
			"if (stack.empty: continue())",
			"else if (stack.item.isIn('c:string'): ++string)",
			"else if (stack.item ==. 'bigglobe:ball_of_string':",
				"unless ((ball =: stack).empty: return(ItemStack.EMPTY))",
			")",
			"else (return(ItemStack.EMPTY))",
		")",
		"NbtCompound nbt = ball.nbt ?: nbtCompound()",
		"if (MinecraftVersion.CURRENT >=. '1.20.5':",
			"Nbt components = nbt.components ?: (nbt.components := nbtCompound())",
			"int damage = nbt.components.`minecraft:damage`.asInt()",
			"int maxDamage = nbt.components.`minecraft:max_damage`.asInt()",
			"damage -= string",
			"if (damage < 0: maxDamage -= (damage =: 0))",
			"components.=$`minecraft:damage`(damage).=`minecraft:max_damage`(maxDamage)",
		")",
		"else (",
			"int damage = nbt.Damage.asInt()",
			"int maxDamage = nbt.MaxDamage.asInt()",
			"damage -= string",
			"if (damage < 0: maxDamage -= (damage =: 0))",
			"nbt.=$Damage(damage).=MaxDamage(maxDamage)",
		")",
		"return(ItemStack.new(nbt))"
	]
}