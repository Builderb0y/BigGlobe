{
	"type": "column_value",
	"script": [
		"for (StructureStart start in structures:",
			"if (start.structure ==. 'bigglobe:well':",
				"StructurePiece piece = start.pieces.(0)",
				"double distance = distanceToCircle(piece, 3.0L)",
				"double mixLevel = smooth(1.0 - distance * 0.25)",
				"double minY = piece.maxY - 3.5L",
				"double oldY = `bigglobe:islands/eroded_surface_height` =: mixLinear(`bigglobe:islands/eroded_surface_height`, minY, mixLevel)",
				"`bigglobe:islands/snow_height` += `bigglobe:islands/eroded_surface_height` - oldY",
			")",
		")"
	]
}