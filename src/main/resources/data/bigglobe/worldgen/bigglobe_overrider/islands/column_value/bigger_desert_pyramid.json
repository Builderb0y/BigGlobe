{
	"type": "column_value",
	"script": [
		"for (StructureStart start in structures:",
			"if (start.structure.type ==. 'bigglobe:bigger_desert_pyramid':",
				"double distance = distanceToSquare(start)",
				"double mixLevel = smooth(1.0L - distance * 0.0625L)",
				"double oldY = `bigglobe:islands/eroded_surface_height` =: mixLinear(`bigglobe:islands/eroded_surface_height`, start.minY + 17.5L, mixLevel)",
				"`bigglobe:islands/snow_height` += `bigglobe:islands/snow_height` - oldY",
			")",
		")"
	]
}