{
	"type": "column_value",
	"script": [
		"for (StructureStart start in structures:",
			"if (start.structure ==. 'bigglobe:windmill':",
				"double distance = distanceToCircle(start, 4.0L)",
				"double mixLevel = smooth(1.0L - distance * 0.0625L)",
				"`bigglobe:islands/eroded_surface_height` = mixLinear(`bigglobe:islands/eroded_surface_height`, start.minY + 1.5L, mixLevel)",
				"`bigglobe:islands/snow_height`           = mixLinear(`bigglobe:islands/snow_height`,           start.minY + 0.5L, mixLevel)",
			")",
		")"
	]
}