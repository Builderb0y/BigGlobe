{
	"type": "column_value",
	"script": [
		"for (StructureStart start in structures:",
			"if (",
				"start.structure ==. 'bigglobe:medium_house' ||",
				"start.structure ==. 'bigglobe:large_house' ||",
				"start.structure ==. 'bigglobe:log_cabin'",
			":",
				"double distance = distanceToSquare(start)",
				"double mixLevel = smooth(distance * 0.0625L)",
				"int minY = start.minY",
				"if (start.structure ==. 'bigglobe:log_cabin': ++minY)",
				"`bigglobe:islands/eroded_surface_height` = mixLinear(minY + 0.5L, `bigglobe:islands/eroded_surface_height`, mixLevel)",
				"`bigglobe:islands/snow_height`           = mixLinear(minY - 0.5L, `bigglobe:islands/snow_height`,           mixLevel)",
				"`bigglobe:islands/surface_foliage`      *= float(mixLevel)",
			")",
		")"
	]
}