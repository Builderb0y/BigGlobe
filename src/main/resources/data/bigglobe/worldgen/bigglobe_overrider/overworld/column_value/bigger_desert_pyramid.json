{
	"type": "column_value",
	"script": [
		"for (StructureStart start in structures:",
			"if (start.structure.type ==. 'bigglobe:bigger_desert_pyramid':",
				"double distance = distanceToSquare(start)",
				"double mixLevel = smooth(1.0L - distance * 0.0625L)",
				"double oldY = world_traits.`bigglobe:exact_surface_y` =: mixLinear(world_traits.`bigglobe:exact_surface_y`, start.minY + 16.5L, mixLevel)",
				"world_traits.`bigglobe:approximate_surface_y` = mixLinear(world_traits.`bigglobe:approximate_surface_y`, start.minY + 16.5L, mixLevel)",
				"world_traits.`bigglobe:snow_y` += world_traits.`bigglobe:exact_surface_y` - oldY",
			")",
		")"
	]
}