{
	"type": "column_value",
	"script": [
		"for (StructureStart start in structures:",
			"if (start.structure ==. 'bigglobe:windmill':",
				"double distance = distanceToCircle(start, 4.0L)",
				"double mixLevel = smooth(1.0L - distance * 0.0625L)",
				"world_traits.`bigglobe:exact_surface_y` = mixLinear(world_traits.`bigglobe:exact_surface_y`, start.minY + 0.5L, mixLevel)",
				"world_traits.`bigglobe:approximate_surface_y`     = mixLinear(world_traits.`bigglobe:approximate_surface_y`,     start.minY + 0.5L, mixLevel)",
				"world_traits.`bigglobe:snow_y`              = mixLinear(world_traits.`bigglobe:snow_y`,              start.minY - 0.5L, mixLevel)",
			")",
		")"
	]
}