{
	"type": "column_value",
	"script": [
		"for (StructureStart start in structures:",
			"if (start.structure ==. 'bigglobe:windmill':",
				"double distance = distanceToCircle(start, 4.0L)",
				"double mixLevel = smooth(1.0L - distance * 0.0625L)",
				"`bigglobe:overworld/processed_surface_y` = mixLinear(`bigglobe:overworld/processed_surface_y`, start.minY + 0.5L, mixLevel)",
				"`bigglobe:overworld/basic_surface_y`     = mixLinear(`bigglobe:overworld/basic_surface_y`,     start.minY + 0.5L, mixLevel)",
				"`bigglobe:overworld/snow_y`              = mixLinear(`bigglobe:overworld/snow_y`,              start.minY - 0.5L, mixLevel)",
			")",
		")"
	]
}