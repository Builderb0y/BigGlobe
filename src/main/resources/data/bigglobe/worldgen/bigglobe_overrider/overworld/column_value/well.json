{
	"type": "column_value",
	"script": [
		"for (StructureStart start in structures:",
			"if (start.structure ==. 'bigglobe:well':",
				"StructurePiece piece = start.pieces.(0)",
				"double distance = distanceToCircle(piece, 3.0L)",
				"double mixLevel = smooth(1.0 - distance * 0.25)",
				"double minY = piece.maxY - 4.5L",
				"world_traits.`bigglobe:approximate_surface_y` = mixLinear(world_traits.`bigglobe:approximate_surface_y`, minY, mixLevel)",
				"double oldY = world_traits.`bigglobe:exact_surface_y` =: mixLinear(world_traits.`bigglobe:exact_surface_y`, minY, mixLevel)",
				"world_traits.`bigglobe:snow_y` += world_traits.`bigglobe:exact_surface_y` - oldY",
			")",
		")"
	]
}