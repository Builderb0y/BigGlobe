{
	"type": "bigglobe:script",
	"config": {
		"script": [
			"unless (getBlockState(originX, originY - 1, originZ) == BlockState('minecraft:dripstone_block'): return(false))",
			"int height = 0",
			"double chance = `bigglobe:overworld/cave`.surface_depth * 0.125L",
			"do while (random.nextBoolean(chance) && getBlockState(originX, originY + height, originZ).isReplaceable():",
				"++height",
			")",
			"boolean connect = false",
			"if (getBlockState(originX, originY + height, originZ) == BlockState('minecraft:pointed_dripstone[vertical_direction=down,thickness=tip,waterlogged=false]'):",
				"connect = true",
			")",
			"for (int offsetY in range[0, height):",
				"setBlockState(originX, originY + offsetY, originZ,",
					"BlockState(",
						"'minecraft:pointed_dripstone',",
						"vertical_direction: 'up',",
						"waterlogged: getBlockState(originX, originY + offsetY, originZ).getBlock() == Block('minecraft:water'),",
						"thickness: (",
							"if (offsetY == height - 1:",
								"connect ? 'tip_merge' : 'tip'",
							")",
							"else if (offsetY == height - 2: 'frustum')",
							"else if (offsetY == 0: 'base')",
							"else ('middle')",
						")",
					")",
				")",
			")",
			"if (connect:",
				"setBlockState(originX, originY + height, originZ, 'minecraft:pointed_dripstone[vertical_direction=down,thickness=tip_merge,waterlogged=false]')",
			")",
			"return(true)"
		]
	}
}