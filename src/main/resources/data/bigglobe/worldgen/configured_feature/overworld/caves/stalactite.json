{
	"type": "bigglobe:script",
	"config": {
		"script": [
			"unless (getBlockState(originX, originY + 1, originZ).hasFullCubeOutline(): return(false))",
			"int height = 0",
			"double chance = `bigglobe:overworld/normalized_cave_surface_depth`",
			"while (random.nextBoolean(chance) && getBlockState(originX, originY - height, originZ).isReplaceable():",
				"++height",
			")",
			"if (height <= 0: return(false))",
			"boolean connect = false",
			"if (getBlockState(originX, originY - height, originZ) == BlockState('minecraft:pointed_dripstone[vertical_direction=up,thickness=tip,waterlogged=false]'):",
				"connect = true",
			")",
			"for (int offsetY in range[0, height):",
				"setBlockState(originX, originY - offsetY, originZ,",
					"if (offsetY == height - 1:",
						"connect",
						"? 'minecraft:pointed_dripstone[vertical_direction=down,thickness=tip_merge,waterlogged=false]'",
						": 'minecraft:pointed_dripstone[vertical_direction=down,thickness=tip,waterlogged=false]'",
					")",
					"else if (offsetY == height - 2: 'minecraft:pointed_dripstone[vertical_direction=down,thickness=frustum,waterlogged=false]')",
					"else if (offsetY == 0: 'minecraft:pointed_dripstone[vertical_direction=down,thickness=base,waterlogged=false]')",
					"else ('minecraft:pointed_dripstone[vertical_direction=down,thickness=middle,waterlogged=false]')",
				")",
			")",
			"if (connect:",
				"setBlockState(originX, originY - height, originZ, 'minecraft:pointed_dripstone[vertical_direction=up,thickness=tip_merge,waterlogged=false]')",
			")",
			"return(true)"
		]
	}
}