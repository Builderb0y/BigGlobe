{
	"type": "script",
	"params": {
		"type": "double",
		"is_3d": false
	},
	"script": [
		"double dip = `bigglobe:overworld/river_depth` / (`bigglobe:overworld/raw_rivers` ^ 4 + 1.0L)",
		"dip *= smooth((`bigglobe:overworld/river_depth` - `bigglobe:overworld/raw_erosion`) / `bigglobe:overworld/river_depth`)",
		"return(dip)"
	]
}