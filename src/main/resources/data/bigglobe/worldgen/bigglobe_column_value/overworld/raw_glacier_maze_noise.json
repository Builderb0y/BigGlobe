{
	"type": "bigglobe:noise",
	"params": {
		"type": "float",
		"is_3d": false
	},
	"grid": {
		"type": "sum",
		"layers": [
			{ "type": "smooth_resample", "source": { "type": "binary", "amplitude": 4.0    }, "scaleX": 64, "scaleY": 64 },
			{ "type": "smooth_resample", "source": { "type": "binary", "amplitude": 1.6    }, "scaleX": 32, "scaleY": 32 },
			{ "type": "smooth_resample", "source": { "type": "binary", "amplitude": 0.64   }, "scaleX": 16, "scaleY": 16 },
			{ "type": "smooth_resample", "source": { "type": "binary", "amplitude": 0.256  }, "scaleX":  8, "scaleY":  8 },
			{ "type": "smooth_resample", "source": { "type": "binary", "amplitude": 0.1024 }, "scaleX":  4, "scaleY":  4 }
		]
	},
	"valid": {
		"where": "`bigglobe:overworld/glacier_crack_threshold` > 1.0L && `bigglobe:overworld/magicalness` > 0.0L",
		"fallback": 0.0
	}
}