{
	"type": "bigglobe:script",
	"params": {
		"type": "double",
		"is_3d": false
	},
	"script": [
		"double snowHeight = `bigglobe:overworld/height_adjusted_snow_y`",
		"double terrainHeight = `bigglobe:overworld/processed_surface_y`",
		"if (terrainHeight - `bigglobe:overworld/sea_level` < 32.0L:",
			"snowHeight = mixSmooth(",
				"terrainHeight,",
				"snowHeight,",
				"(terrainHeight - `bigglobe:overworld/sea_level`) / 32.0L",
			")",
		")",
		"snowHeight"
	],
	"valid": {
		"where": "`bigglobe:overworld/processed_surface_y` > `bigglobe:overworld/sea_level`"
	}
}