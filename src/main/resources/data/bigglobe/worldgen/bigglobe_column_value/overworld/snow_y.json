{
	"type": "bigglobe:double_script_2d",
	"value": [
		"double snowHeight = `bigglobe:overworld/height_adjusted_snow_y`",
		"double terrainHeight = `bigglobe:overworld/surface_y`",
		"if (terrainHeight - `bigglobe:overworld/sea_level` < 32.0L:",
			"snowHeight = mixLinear(",
				"terrainHeight,",
				"snowHeight,",
				"smooth((terrainHeight - `bigglobe:overworld/sea_level`) / 32.0L)",
			")",
		")",
		"snowHeight"
	],
	"valid": {
		"where": "`bigglobe:overworld/surface_y` > 0.0L"
	}
}