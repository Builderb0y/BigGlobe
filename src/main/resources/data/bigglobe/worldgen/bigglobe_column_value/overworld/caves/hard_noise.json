{
	"type": "bigglobe:script",
	"params": {
		"type": "float",
		"is_3d": true
	},
	"script": [
		"float curve(float valueSquared, float width:",
			"float curve = valueSquared / (valueSquared + width ^ 2)",
			"float edgeExclusion = unmixLinear(",
				"`bigglobe:overworld/cave_system_size` - width * 2.0I,",
				"float(`bigglobe:overworld/cave_system_size`),",
				"float(soft_distance) * float(`bigglobe:overworld/cave_system_size`)",
			")",
			"if (edgeExclusion > 0.0I: curve += edgeExclusion ^ 2)",
			"float bottomExclusion = float(unmixLinear(",
				"`bigglobe:overworld/surface_y` - depth + width,",
				"`bigglobe:overworld/surface_y` - depth,",
				"y",
			"))",
			"if (bottomExclusion > 0.0I: curve += bottomExclusion ^ 2)",
			"if (`bigglobe:overworld/beach_cave_exclusion` > 0.0I:",
				"float topExclusion = float(unmixLinear(",
					"`bigglobe:overworld/surface_y` - width * 2.0L,",
					"`bigglobe:overworld/surface_y`,",
					"y",
				"))",
				"if (topExclusion > 0.0I: curve += topExclusion ^ 2)",
			")",
			"return(curve)",
		")",
		"return(",
			"curve(",
				"`bigglobe:overworld/caves/unbiased_primary_noise`(y),",
				"`bigglobe:overworld/caves/hard_width`(y)",
			")",
			"* curve(",
				"`bigglobe:overworld/caves/unbiased_secondary_noise`(y),",
				"8.0I",
			")",
		")"
	],
	"valid": {
		"min_y": "ceilInt(`bigglobe:overworld/surface_y`) - `bigglobe:overworld/caves/hard_depth`",
		"max_y": "ceilInt(`bigglobe:overworld/surface_y`)"
	}
}