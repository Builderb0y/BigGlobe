{
	"type": "script",
	"params": {
		"type": {
			"type": "class",
			"name": "SkylandBounds",
			"fields": {
				"min_y": "double",
				"max_y": "double",
				"surface_depth": "int"
			}
		},
		"is_3d": false
	},
	"script": [
		"double exclusion = 1.0L - (`bigglobe:overworld/skylands/exclusion` + `bigglobe:overworld/skyland`.soft_distance_squared * 1.25L)",
		"if (exclusion !> 0.0L: return(null))",
		"SmallSkylandPlatformCell platformCell = `bigglobe:overworld/skylands/platform_small`",
		"long seed = (worldSeed # 16x9E16B3F642DFC38FUL).newSeed(platformCell.cell_x, platformCell.cell_z)",
		"double averageCenter = seed.nextDouble(-256.0L, +256.0L) * exclusion + 512.0L",
		"double top = averageCenter + `bigglobe:overworld/skylands/plains_center`",
		"double outness = platformCell.soft_distance / exclusion",
		"if (outness !<= 1.0L: return(null))",
		"double curve = exclusion * seed.newSeed().nextDouble(16.0L, 32.0L) * (outness - 1.0L) / (outness * 2.0L + 1.0L)",
		"SkylandBounds.new(min_y: top + curve, max_y: top, surface_depth: `bigglobe:overworld/skylands/plains_surface_depth`)"
	]
}