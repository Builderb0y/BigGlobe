{
	"type": "bigglobe:double_script_2d",
	"value": [
		"double sharpness = `bigglobe:overworld/hilliness`",
		"double curve(double value, double amplitude:",
			"value = abs(value)",
			"value *= mixLinear(value, 2.0L - value, sharpness)",
			"value = value * -2.0L + 1.0L",
			"value * amplifier",
		")",
		"sharpness * (",
			"+ curve(`bigglobe:overworld/raw_erosion_512`, 512.0L)",
			"- curve(`bigglobe:overworld/raw_erosion_256`, 256.0L)",
			"+ curve(`bigglobe:overworld/raw_erosion_128`, 128.0L)",
			"- curve(`bigglobe:overworld/raw_erosion_64`,   64.0L)",
			"+ curve(`bigglobe:overworld/raw_erosion_32`,   32.0L)",
			"- curve(`bigglobe:overworld/raw_erosion_16`,   16.0L)",
			"+ curve(`bigglobe:overworld/raw_erosion_8`,     8.0L)",
			"- curve(`bigglobe:overworld/raw_erosion_4`,     4.0L)",
			"+ curve(`bigglobe:overworld/raw_erosion_2`,     2.0L)",
		")"
	]
}