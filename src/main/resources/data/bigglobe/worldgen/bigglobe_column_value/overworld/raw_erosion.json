{
	"type": "bigglobe:script",
	"params": {
		"type": "double",
		"is_3d": false
	},
	"script": [
		"double sharpness = `bigglobe:overworld/hilliness`",
		"double curve(double value, double amplitude:",
			"value = abs(value)",
			"value *= mixLinear(value, 2.0L - value, sharpness)",
			"(1.0L - value) * amplitude",
		")",
		"`bigglobe:overworld/continentalness` * sharpness * (",
			"+ curve(`bigglobe:overworld/raw_erosion_512`, 1024.0L)",
			"- curve(`bigglobe:overworld/raw_erosion_256`,  512.0L)",
			"+ curve(`bigglobe:overworld/raw_erosion_128`,  256.0L)",
			"- curve(`bigglobe:overworld/raw_erosion_64`,   128.0L)",
			"+ curve(`bigglobe:overworld/raw_erosion_32`,    64.0L)",
			"- curve(`bigglobe:overworld/raw_erosion_16`,    32.0L)",
			"+ curve(`bigglobe:overworld/raw_erosion_8`,     16.0L)",
			"- curve(`bigglobe:overworld/raw_erosion_4`,      8.0L)",
			"+ curve(`bigglobe:overworld/raw_erosion_2`,      4.0L)",
		")"
	]
}