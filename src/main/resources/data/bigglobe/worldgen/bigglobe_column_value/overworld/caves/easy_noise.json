{
	"type": "bigglobe:script",
	"params": {
		"type": "float",
		"is_3d": true
	},
	"script": [
		"float curve(float valueSquared, float width:",
			"float curve = valueSquared / (valueSquared + width ^ 2)",
			"float edgeExclusion = unmixLinear(",
				"`bigglobe:overworld/cave_system_size` - width * 2.0I,",
				"float(`bigglobe:overworld/cave_system_size`),",
				"float(soft_distance) * float(`bigglobe:overworld/cave_system_size`)",
			")",
			"if (edgeExclusion > 0.0I: curve += edgeExclusion ^ 2)",
			"float bottomExclusion = float(unmixLinear(",
				"`bigglobe:overworld/basic_surface_y` - depth + width,",
				"`bigglobe:overworld/basic_surface_y` - depth,",
				"y",
			"))",
			"if (bottomExclusion > 0.0I: curve += bottomExclusion ^ 2)",
			"if (`bigglobe:overworld/beach_cave_exclusion` > 0.0I:",
				"float topExclusion = float(unmixLinear(",
					"`bigglobe:overworld/processed_surface_y` - width * 2.0L,",
					"`bigglobe:overworld/processed_surface_y`,",
					"y",
				"))",
				"if (topExclusion > 0.0I: curve += topExclusion ^ 2)",
			")",
			"return(curve)",
		")",
		"return(",
			"curve(",
				"`bigglobe:overworld/caves/biased_primary_noise`,",
				"`bigglobe:overworld/caves/easy_width`",
			")",
			"* curve(",
				"`bigglobe:overworld/caves/biased_secondary_noise`,",
				"8.0I",
			")",
			"+ `bigglobe:overworld/caves/ledge_noise`",
		")"
	],
	"valid": {
		"min_y": "floorInt(`bigglobe:overworld/basic_surface_y` - `bigglobe:overworld/caves/easy_depth`) + 1",
		"max_y": "floorInt(`bigglobe:overworld/processed_surface_y`) + 1"
	}
}