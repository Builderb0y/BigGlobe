{
	"type": "script",
	"params": {
		"type": "double",
		"is_3d": false
	},
	"script": [
		"double snowHeight = beachy_surface_height - surface_erosion.lowFrequency * erosion_multiplier",
		"snowHeight = snowHeight * (1.0L + 1.0L / 32.0L) - 12.0L - surface_temperature * 16.0L",
		"double terrainHeight = eroded_surface_height",
		"if (terrainHeight - `bigglobe:overworld/sea_level` < 32.0L:",
			"snowHeight = mixSmooth(",
				"terrainHeight,",
				"snowHeight,",
				"(terrainHeight - `bigglobe:overworld/sea_level`) / 32.0L",
			")",
		")",
		"snowHeight"
	]
}